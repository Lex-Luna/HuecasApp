                                                                    <Span Text="{Binding NomLocal, StringFormat='El local {0}'}" />
                                                                    <Span Text="{Binding Categorias, StringFormat=' de {0}'}" />
                                                                    <Span Text="{Binding Barrio, StringFormat=' del barrio {0}'}" />
